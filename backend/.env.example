# Environment Configuration for OMR Evaluation System
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://khadee:none@localhost:5432/db

# For development, you can also use SQLite (uncomment below and comment PostgreSQL)
# DATABASE_URL=sqlite:///omr_evaluation.db

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# CORS Configuration (comma-separated additional origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=./uploads
OUTPUT_FOLDER=./results

# Database Connection Pool Settings (for production)
DB_POOL_SIZE=10
DB_POOL_OVERFLOW=20
DB_POOL_RECYCLE=3600

# OMR Processing Configuration
DEFAULT_ANSWER_KEY_SET=A
MAX_QUESTIONS_PER_SHEET=100
PROCESSING_TIMEOUT=300  # 5 minutes per sheet

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=omr_system.log

# Security Configuration
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600  # 1 hour

